{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "automergeStrategy": "rebase",
    "automergeType": "pr",
    "dockerfile": {
        "autoApprove": true,
        "automerge": true,
        "enabled": true,
        "managerFilePatterns": [
            "/\\.conf$/"
        ],
        "ignoreTests": false,
        "platformAutomerge": true,
        "schedule": [
            "at any time"
        ]
    },
    "gomod": {
        "enabled": false
    },
    "pruneBranchAfterAutomerge": true,
    "tekton": {
        "enabled": true,
        "managerFilePatterns": [
            "/\\.yaml$/",
            "/\\.yml$/"
        ],
        "ignoreTests": false,
        "includePaths": [
            ".tekton/**"
        ],
        "platformAutomerge": true,
        "schedule": [
            "at any time"
        ],
        "packageRules": [
            {
                "addLabels": [
                    "approved",
                    "lgtm"
                ],
                "automerge": true,
                "matchUpdateTypes": [
                    "digest"
                ]
            }
        ]
    },
    "git-submodules": {
        "enabled": true
    }
}
